---
import type ILink from '../data/interfaces/ILink'
interface Props {
	title: string
	data: ILink[]
}
const {data, title} = Astro.props;
---
<nav class="w-full flex flex-col items-center gap-4 p-5 rounded-2xl bg-secondary">
	<h4 class="font-mono text-xl uppercase">{title}</h4>
	<ul class="w-full flex flex-col gap-2">
		{data.map((link) => (
			<li class="w-full flex items-center py-2 rounded-2xl bg-primary hover:bg-tertiary justify-center">
				<a href={link.path} class="capitalize font-mono">{link.label}</a>
			</li>
		))}
	</ul>
</nav>
