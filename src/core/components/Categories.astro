---
import en from "../data/category";
---

<div
  class="flex flex-col items-center gap-4 w-full h-full p-4 bg-secondary text-white rounded-2xl"
>
  <h2 class="text-base font-sans font-semibold">Categories</h2>
  <ul class="flex flex-wrap items-center justify-evenly gap-y-2">
    {
      en.map((item) => (
        <li>
          <a
            href={item.path}
            class="flex gap-2 capitalize items-center text-sm font-sans font-semibold px-4 py-2 rounded-xl hover:bg-tertiary bg-primary"
          >
            {item.label}
            <div class="rounded-full bg-blue-600 w-5 h-5 flex items-center justify-center">
              {item.amount}
            </div>
          </a>
        </li>
      ))
    }
  </ul>
</div>
