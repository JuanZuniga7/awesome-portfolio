---
import Articles from "../components/Articles.astro";
import IDEButton from "../components/IDEButton.astro";
import Code from "../components/Code.astro"
interface Props{
    title: string
}
const {title} = Astro.props;
const colors = ["bg-indigo-400", "bg-sky-400", "bg-rose-400"]
---
<Articles>
    <div class="w-full h-full flex flex-col items-center border-[1px] bg-primary border-tertiary rounded-xl p-1 text-sm">
        <div class="w-[95%] h-8 border-b-[1px] border-tertiary py-2 px-5 flex items-center justify-between font-mono">
            <span class="text-white">
                {title}
                <span class="text-sky-400 -ml-2">.cs</span>
            </span>
            <ul class="flex items-center gap-1">
                {colors.map((color) => <IDEButton className={color}/>)}
            </ul>
        </div>
        <Code/>
    </div>
</Articles>